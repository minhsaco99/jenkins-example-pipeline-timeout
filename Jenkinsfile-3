pipeline {
    agent any
    stages {
        stage('No-op') {
            steps {
                sh 'bash test.sh'
            }
        }
    }
    environment{
      P_NAME = "TEST"
    }
    post {
        always {
            echo 'One way or another, I have finished'
        }
        success {
            echo 'I succeeded!'
        }
        unstable {
            echo 'I am unstable :/'
        }
        failure {
            mail to: 'minhsaco99@gmail.com',
                 subject: "Failed to build ${currentBuild.fullDisplayName}",
                 body: "Some thing is wrong when build ${env.BUILD_URL}"

        }
        changed {
            echo 'Things were different before...'
        }
    }
}