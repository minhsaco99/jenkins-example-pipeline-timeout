pipeline {
  agent none
  options {
    timeout(time: 30, unit: 'SECONDS') 
  }
  stages {
    stage('input') {
      agent any
      options {
        timeout(time: 10, unit: 'SECONDS') 
      }
      steps {
        retry(3){
          echo "Good Morning, Minh"
          sh '''
            hostname
          '''
          sh '/bin/bash test.sh'
        }
      }
    }
  }
}