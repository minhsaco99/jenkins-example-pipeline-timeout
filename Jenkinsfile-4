pipeline {
  agent none
  options {
    timeout(time: 30, unit: 'SECONDS') 
  }
  stages {
    stage('input') {
      agent any
      options {
        retry(5)
        timeout(time: 3, unit: 'SECONDS') 
      }
      steps {
        echo "Good Morning, Minh"
        sh '''
          hostname
        '''
        sh '/bin/bash test.sh'
      }
    }
  }
}